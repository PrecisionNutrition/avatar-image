{{#if @user.avatar.url}}
  <AvatarImage
    @url={{@user.avatar.url}}
    @alt={{@alt}}
    @params={{if
      @size
      (hash
        w=@size
        h=@size
        fit="facearea"
        facepad=3
        faceindex=1
      )
      (hash
        fit="facearea"
        facepad=3
        faceindex=1
      )
    }}
    @avatarIconClass={{@avatarIconClass}}
    @avatarImageClass={{@avatarImageClass}}
  />
{{else if @user.email}}
  <img
    src={{gravatar-image-url @user.email size=@size}}
    alt={{@alt}}
    height={{@size}}
    width={{@size}}
    class={{@avatarImageClass}}
    data-test-selector="gravatar-image"
  >
{{/if}}
