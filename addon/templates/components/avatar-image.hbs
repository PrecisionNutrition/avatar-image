{{#if url}}
  <ImgixPhoto
    @alt={{@alt}}
    @autoSetDimensions={{true}}
    @params={{@params}}
    @url={{@url}}
    class={{@avatarImageClass}}
    data-test-selector="avatar-image"
  />
{{else}}
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" data-test-selector="avatar-icon" class="u-fillGreyDarkest {{@avatarIconClass}}">
    <g class="nc-icon-wrapper" stroke-linecap="square" stroke-linejoin="miter" stroke-width="3" fill="#111111" stroke="#111111">
      <path data-color="color-2" fill="none" stroke-miterlimit="10" d="M30,30H18 c-6.627,0-12,5.373-12,12v2c0,0,6.25,2,18,2s18-2,18-2v-2C42,35.373,36.627,30,30,30z"/>
      <path fill="none" stroke="#111111" stroke-miterlimit="10" d="M14,12 c0-5.523,4.477-10,10-10s10,4.477,10,10s-4.477,12-10,12S14,17.523,14,12z"/>
    </g>
  </svg>
{{/if}}
